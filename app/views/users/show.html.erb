<h3><%= notice %></h3>
<h1><%= @user.name %>さんの詳細ページ</h1>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag @user.profile_image.url %>
      <div class="caption">
        <p>
          ユーザーネーム: <%= @user.name %>
        </p>
        <p>
          メールアドレス: <%= @user.email %>
        </p>
        <% if @user.id == current_user.id %>
          <%= link_to '編集する', edit_user_path(@user), class: 'btn btn-default' %>
        <% end %>
        <%= link_to 'お気に入りした投稿', likes_user_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'ユーザー一覧へ', users_path %> |
<%= link_to '投稿一覧へ', pictures_path %>
