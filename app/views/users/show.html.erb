<h3><%= notice %></h3>

<div class="row">
  <div class="thumbnail">
    <%= image_tag @user.profile_image.url %>
    <div class="caption">
      <p>
        ユーザーネーム: <%= @user.name %>
      </p>
      <p>
        メールアドレス: <%= @user.email %>
      </p>
      <% if @user.id == current_user.id %>
        <%= link_to '編集する', edit_user_path(@user), class: 'btn btn-default' %>
      <% end %>
      <%= link_to 'ユーザー一覧へ', users_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
