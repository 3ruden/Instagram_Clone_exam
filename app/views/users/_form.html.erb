<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: user, local: true) do |form| %>
  <div class="field">
    <%= form.label :profile_image %>
    <%= form.file_field :profile_image %>
  </div>

  <div class="input-group">
    <%= form.label :name, class: 'input-group-addon' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.label :email, class: 'input-group-addon' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.label :password, class: 'input-group-addon' %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.label :password_confirmation, class: 'input-group-addon' %>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <%= form.submit @submit_value, class: 'btn btn-primary' %>
<% end %>
