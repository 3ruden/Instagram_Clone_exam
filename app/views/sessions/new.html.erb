<h1>ログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>

  <div class="input-group">
    <%= form.label :email, class: 'input-group-addon' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.label :password, class: 'input-group-addon' %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <%= form.submit "ログインする", class: 'btn btn-primary' %>
<% end %>

